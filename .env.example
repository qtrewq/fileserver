# Security Configuration
# Copy this file to .env and update with your values

# CRITICAL: Change this to a secure random string in production
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_IN_PRODUCTION

# Token expiration (in minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate limiting
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15
RATE_LIMIT_WINDOW_SECONDS=60

# File upload limits
MAX_FILE_SIZE_MB=100
MAX_TOTAL_UPLOAD_SIZE_MB=500

# Storage
STORAGE_ROOT=./storage

# Python execution security
PYTHON_EXECUTION_TIMEOUT=30
PYTHON_MAX_MEMORY_MB=512
ALLOW_PACKAGE_INSTALL=false

# CORS (comma-separated list of allowed origins)
ALLOWED_ORIGINS=http://localhost:30815,http://127.0.0.1:30815

# Password requirements
MIN_PASSWORD_LENGTH=8
REQUIRE_UPPERCASE=true
REQUIRE_LOWERCASE=true
REQUIRE_DIGIT=true
REQUIRE_SPECIAL_CHAR=false
